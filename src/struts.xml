<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<!-- xmlの設定 -->
	<constant name="struts.ui.theme" value="xhtml" />
	<constant name="struts.custom.i18n.resources"
		value="com.internousdev.prototype1605.property.Login,
		   com.internousdev.prototype1605.property.comment"></constant>

	<package name="com.internousdev.prototype1605.action" extends="struts-default">
		<action name="Login"
			class="com.internousdev.prototype1605.action.LoginAction" method="execute">
			<result name="success">main.jsp</result>
			<result name="error">login.jsp</result>
		</action>


		<!-- Twitter認証を行うアクション -->
		<action name="login-twitter"
			class="com.internousdev.prototype1605.action.GoTwitterAction" method="execute">
			<result name="success">success.jsp</result>
			<result name="error">error.jsp</result>
		</action>

		<!-- Twitter認証のコールバックアクション -->
		<action name="login-twitter-action"
			class="com.internousdev.prototype1605.action.LoginTwitterAction"
			method="execute">
			<result name="success" type="redirectAction">main</result>
			<result name="error">error.jsp</result>
		</action>
	</package>
</struts>